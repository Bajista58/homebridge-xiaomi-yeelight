{
  "pluginAlias": "XiaomiYeelightSupport",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "XiaomiYeelightSupport",
        "required": true
      },
      "debugLogging": {
        "title": "Verbose Logging",
        "type": "boolean",
        "default": "false",
        "required": false,
        "description": "Will do extra logging for all actions"
      },
      "lights": {
        "type": "array",
        "items": {
          "title": "Add Lights",
          "description": "Add lights manually based on their IP address and token.",
          "type": "object",
          "properties": {
            "ipAddress": {
              "title": "IP Address of the light",
              "type": "string",
              "required": true,
              "description": "LAN IP address of the light"
            },
            "token": {
              "title": "Encryption Token",
              "type": "string",
              "required": true,
              "description": "Encryption token of the light. See Readme."
            },
            "name": {
              "title": "Name of the light",
              "type": "string",
              "required": false,
              "description": "The name of the light"
            },
            "hasRgbSupport": {
              "type": "boolean",
              "default": "false",
              "required": false,
              "description": "Whether the light has RGB color support"      
            }
          }
        }
      }
    }
  }
}